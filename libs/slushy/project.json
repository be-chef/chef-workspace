{
    "name": "slushy",
    "projectType": "library",
    "sourceRoot": "libs/slushy/src",
    "targets": {
        "chromatic": {
            "executor": "nx:run-commands",
            "dependsOn": ["build-storybook"],
            "options": {
                "command": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --storybook-build-dir libs/slushy/storybook-static"
              }
        }
    }
}